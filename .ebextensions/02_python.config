container_commands:
  01_migrate:
    command: "source .venv/bin/activate && py manage.py migrate --noinput"
    leader_only: true

  02_createsu:
    command: "source .venv/bin/activate && py manage.py createsu"
    leader_only: true

  03_collectstatic:
    command: "source .venv/bin/activate && py manage.py collectstatic --noinput"